{{!-- checkout page --}}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
<div class="clv_main_wrapper index_v3">
    {{>Ecommlink}}
    {{>Ecommnavbar}}
    <!--Breadcrumb-->
    <div class="breadcrumb_wrapper">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="breadcrumb_inner">
                        <h3>check out</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="breadcrumb_block">
            <ul>
                <li><a href="/">home</a></li>
                <li>check out</li>
            </ul>
        </div>
    </div>
    <!--Checkout-->
    <div class="clv_checkout_wrapper clv_section">
        <div class="container">
            <form action="/order" method="post">
                <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                <div class="row">
                    <div class="col-lg-8 col-md-8">
                        <div class="checkout_inner">
                            <div class="checkout_heading">

                                {{#if err }}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <strong> Error </strong>
                                    {{err}}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Close"></button>
                                </div>
                                {{/if}}
                                {{#if msg }}
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <strong> success </strong>
                                    {{msg}}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Close"></button>
                                </div>
                                {{/if}}
                                <h3>check out</h3>
                                <h5>contact information</h5>
                            </div>
                            <div class="checkout_form">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form_block"><input type="text" class="form_field" name="name"
                                                placeholder="name"></div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form_block"><input type="text" class="form_field" id="user.email"
                                                value="{{user.email}}" name="email" placeholder="email" disabled></div>
                                    </div>
                                </div>
                            </div>
                            <div class="checkout_heading">
                                <h5>shipping address</h5>
                            </div>
                            <div class="checkout_form">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form_block"><input type="text" class="form_field" name="city"
                                                placeholder="City"></div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form_block"><input type="text" class="form_field" name="state"
                                                placeholder="State"></div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form_block"><input type="text" class="form_field" name="pincode"
                                                placeholder="Pincode"></div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form_block"><input type="text" class="form_field" name="phone"
                                                placeholder="phone"></div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form_block"><input type="text" class="form_field" name="address"
                                                placeholder="Address"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="checkout_submit">
                                        <button class="clv_btn"> Pay Now </button>
                                        <a href="/category"><span><i class="fa fa-angle-left"
                                                    aria-hidden="true"></i></span> back to shipping</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </form>
            <div class="col-lg-4 col-md-4">
                <div class="cart_summery_block">
                    <h3>your cart summery</h3>
                    <h5>you have {{ProductDetails.totalQtyOfAllProducts}} items in your cart</h5>
                    <ul>
                        {{#each ProductDetails.productsObject}}
                        <li>
                            <div class="product_img"><img src="/uploads/{{this.item.image}}" style="width:50px"
                                    alt="image"></div>
                            <div class="product_quantity">
                                <h6>{{this.item.pname}}</h6>
                                <p>x{{this.qty}}</p>
                            </div>
                            <div class="product_price">
                                <h4>{{this.price}}</h4>
                            </div>
                        </li>
                        {{/each}}
                        <li>
                            <div class="total_amount">
                                <h4>total</h4>
                            </div>
                            <div class="product_price">
                                <h4>{{ProductDetails.totalPriceOfAllProducts}}</h4>
                            </div>
                        </li>
                    </ul>
                    <a href="javascript:;">have a discount code?</a>
                </div>
                <div class="guarantee_block">
                    <div class="guaranty_icon"><img src="images/protection.png" alt="image"></div>
                    <h3>Secure Payment</h3>
                    <p>Consectetur adipisicing elit se eiusmod tempor incididunt ut labore et dolore magna aliquanim ad
                        minim veniam quis nostrud.</p>
                </div>
            </div>
        </div>

    </div>
</div>
<!--Footer-->
{{>Ecommfooter}}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>