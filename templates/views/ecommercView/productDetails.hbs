    <!--Products Details-->
    <div class="product_detail_wrapper">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="product_detail_tab">
                        <ul class="nav nav-tabs">
                            <li><a data-toggle="tab" class="active" href="#description">Description</a></li>
                            <li><a data-toggle="tab" href="#review">Review</a></li>
                        </ul>
                        <div class="tab-content">
                            <div id="description" class="tab-pane fade show active">
                                <p>{{Product.details}}</p>
                            </div>
                            <div id="review" class="tab-pane fade">
                                <div class="fd_review_wrapper">
                                    <h3 class="review_heading">there are no reviews yet.</h3>
                                    <h5>be the first to review "this product"</h5>
                                    {{#if err }}
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <strong> Error </strong>
                                        {{err}}
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"
                                            aria-label="Close"></button>
                                    </div>
                                    {{/if}}
                                    {{#if msg }}
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <strong> success </strong>
                                        {{msg}}
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"
                                            aria-label="Close"></button>
                                    </div>
                                    {{/if}}
                                    <div class="row">
                                        <form action="/review/{{Product.id}}" method="post">
                                            <input type="hidden" name="id" value="{{Product.id}}">
                                            <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                                            <div class="col-lg-9">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form_block">
                                                            <input type="text" class="form_field" name="username"
                                                                placeholder="Name">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form_block">
                                                            <input type="text" class="form_field" name="email"
                                                                placeholder="Email">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form_block">
