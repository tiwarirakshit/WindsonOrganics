{{!-- FORGOT PASSWORD --}}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
{{>Ecommlink}}
<div class="clv_main_wrapper index_v3 about_page">
    {{>Ecommnavbar}}
    <!--Breadcrumb-->
    <div class="breadcrumb_wrapper">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="breadcrumb_inner">
                        <h3>forgot password</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="breadcrumb_block">
            <ul>
                <li><a href="/">home</a></li>
                <li>forgot password</li>
            </ul>
        </div>
    </div>
    {{!-- body --}}
    <div class="error_wrapper clv_section ">
        <div class="container">
            <div class="signin_wrapper open_signin">
                <div class="signup_inner shadow-lg rounded">
                    <div class="signup_details">
                        <h3>welcome to Dairy Farming!</h3>
                        <p>Consectetur adipisicing elit sed do eiusmod por incididunt uttelabore et dolore magna aliqu.
                        </p>
                        <a href="/getlogin" class="clv_btn white_btn">sign in</a>
                        <ul>
                            <li><a href="javascript:;"><span><i class="fa fa-facebook"
                                            aria-hidden="true"></i></span></a></li>
                            <li><a href="javascript:;"><span><i class="fa fa-twitter" aria-hidden="true"></i></span></a>
                            </li>
                            <li><a href="javascript:;"><span><i class="fa fa-linkedin"
                                            aria-hidden="true"></i></span></a></li>
                            <li><a href="javascript:;"><span><i class="fa fa-youtube-play"
                                            aria-hidden="true"></i></span></a></li>
                        </ul>
                    </div>
                    <div class="signup_form_section">
                        <h4>Forgot your password</h4>
                        <br><br>
                        {{#if msg }}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong> Success </strong>
                            {{msg}}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        {{/if}}

                        <!-- if someone tried to access a protected route  -->
                        <!-- this flash message will show them to login first  -->

                        {{#if error_messages }}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong> Error </strong>
                            {{error_messages}}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        {{/if}}
                        <form action="/ForgotPassword" method="POST" class="text-center">
                            <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                            <div class="form_block shadow rounded">
                                <input type="email" class="form_field" name="email" placeholder="Email">
                            </div>
                            <button type="submit" class="clv_btn">submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Footer-->

    {{>Ecommfooter}}
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"></script>