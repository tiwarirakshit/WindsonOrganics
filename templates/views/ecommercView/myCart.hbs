        {{!-- my cart page --}}
  {{>Ecommlink}}
<body class="woocommerce-cart" >
<div class="clv_main_wrapper index_v3">
	{{>Ecommnavbar}}
    <!--Breadcrumb-->
    <div class="breadcrumb_wrapper">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="breadcrumb_inner">
                        <h3>My Cart</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="breadcrumb_block">
            <ul>
                <li><a href="/">home</a></li>
                <li>My Cart</li>
            </ul>
        </div>
    </div>
    <!--Cart Single-->
    <div class="cart_single_wrapper clv_section">
        <div class="container">
            <div class="cart_table_section table-responsive">
                <div class="table_heading">
                    <h3>shopping cart</h3>
                    <h4>{{ProductDetails.totalQtyOfAllProducts}} items in your cart</h4>
                </div>
                <table class=" cart_table table-responsive woocommerce-cart-form__contents">
                    <tr>
                        <th>items</th>
                        <th>quantity</th>
                        <th>price</th>
                        <th>total</th>
                        <th>remove</th>
                    </tr>
                    	{{#each ProductDetails.productsObject}}
                    <tr>
                        <td>
                            <div class="product_img">
                                <img src="/uploads/{{this.item.image}}" style="width: 100px;" alt="image">
                                <h6>{{this.item.name}}</h6>
                            </div>
                        </td>
                        <td>
                            <div class="item_quantity">
                                <a href="/reduceItemByOne/{{this.item._id}}" class="quantity_minus"> - </a>
                                <input type="text" value="{{this.qty}}" class="quantity" disabled="">
                                <a href="/increaseItemByOne/{{this.item._id}}" class="quantity_plus">+</a>
                            </div>
                        </td>
                        <td>
                            <div class="pro_price">
                                <h5>{{this.item.price}}</h5>
                            </div>
                        </td>
                        <td>
                            <div class="pro_price">
                                <h5>{{this.price}}</h5>
                            </div>
                        </td>
                        <td>
                            <div class="pro_remove">
                                <a href="/removeItem/{{this.item._id}}">
                                
                                <span>
                                    
                                    <svg version="1.1"  xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                                            viewBox="0 0 47.971 47.971" style="enable-background:new 0 0 47.971 47.971;" xml:space="preserve" width="12px" height="12px">
                                    <g>
                                        <path d="M28.228,23.986L47.092,5.122c1.172-1.171,1.172-3.071,0-4.242c-1.172-1.172-3.07-1.172-4.242,0L23.986,19.744L5.121,0.88
                                            c-1.172-1.172-3.07-1.172-4.242,0c-1.172,1.171-1.172,3.071,0,4.242l18.865,18.864L0.879,42.85c-1.172,1.171-1.172,3.071,0,4.242
                                            C1.465,47.677,2.233,47.97,3,47.97s1.535-0.293,2.121-0.879l18.865-18.864L42.85,47.091c0.586,0.586,1.354,0.879,2.121,0.879
                                            s1.535-0.293,2.121-0.879c1.172-1.171,1.172-3.071,0-4.242L28.228,23.986z"/>
                                    </g>
                                    </svg>
                                </span>
                                  </a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                    <tr>
                        <td>
                            <div class="pro_price">
                                <h5>sub total</h5>
                            </div>
                        </td>
                        <td></td>
                        <td></td>
                        <td>
                            <div class="pro_price">
                   <h4>{{ProductDetails.totalPriceOfAllProducts}}</h4>
                            </div>
                        </td>
                        <td></td>
                    </tr>
                </table>
                <div class="checkout_btn_block">
                    <a href="/checkout" class="clv_btn checkout-button">proceed to checkout</a>
                </div>
            </div>
        </div>
    </div>
        <!--Footer-->
{{>Ecommfooter}}
</body>