{{>adminNavbar}}
<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">
  <!-- Main Content -->
  <div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">
      <!-- Page Heading -->
      <h1 class="h3 mb-4 text-gray-800">User Details</h1>
      <div class="row">
        <div class="col-lg-9">
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">user personal information</h6>
            </div>
            <div class="card-body">
              
                <!-- Text input-->
                <div class="form-group">
                    <div class="row">
                  <label class="col-md-6 control-label">name</label>
                  <div class="col-md-6">
                    <p>{{userDetails.username}}</p>
                  </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">

                  <label class="col-md-6 control-label">email</label>
                  <div class="col-md-6">
            <p>{{userDetails.email}}</p>
                  </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                  <label class="col-md-6 control-label">phone number</label>
                  <div class="col-md-6">
                   <p>{{userDetails.phone}}</p>
                  </div>
                    </div>
                </div>
                <div class="form-group">
                  <div class="row">
                    <label class="col-md-6 control-label">Address</label>
                    <div class="col-md-6">
                      <p>{{userDetails.address}}</p>
                    </div>
                  </div>
                </div>
            </div>
          </div>
        </div>
      </div>

    <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Product List</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>order id</th>
                      <th>city</th>
                      <th>state</th>
                      <th>address</th>
                      <th>pincode</th>
                      <th>total no. of products</th> </th> 
                      <th>total price</th>
                      <th>order date</th>
                      <th>order status</th>
                      <th>payment type</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each order}}
                    <tr>
                      <td>{{this._id}}</td>
                      <td>{{this.city}}</td>
                      <td>{{this.state}}</td>
                      <td>{{this.address}}</td>
                      <td>{{this.pincode}}</td>
                      <td>{{this.totalQtyOfAllProducts}}</td>
                      <td>{{this.totalPriceOfAllProducts}}</td>
                      <td>{{this.createdAt}}</td>  
                      <td>{{this.status}}</td>
                      <td>{{this.paymentType}}</td>
                    </tr>
                  {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
    </div>
    <!--container-fluid -->
  </div>
  <!-- End of Main Content -->
  {{>adminFooter}}