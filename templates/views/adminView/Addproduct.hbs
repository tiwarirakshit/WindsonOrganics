{{>adminNavbar}}
<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">
  <!-- Main Content -->
  <div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">
      <!-- Page Heading -->
      <h1 class="h3 mb-4 text-gray-800">Add product</h1>
      <div class="row">
        <div class="col-lg-9">
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">product details </h6>
              {{#if err }}
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong> Error </strong>
                {{err}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
              {{/if}}
              {{#if msg }}
              <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong> success </strong>
                {{msg}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
              {{/if}}
            </div>
            <div class="card-body">
              <form action="/AddNewProduct?_csrf={{csrfToken}}" method="POST" , enctype="multipart/form-data">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <!-- Text input-->
                <div class="form-group">
                  <label class="col-md-9 control-label">product name</label>
                  <div class="col-md-12">
                    <input id="textinput" name="name" type="text" placeholder="Enter Name of Product"
                      class="form-control input-md">
                  </div>
                </div>
                <!-- Search input-->
                <div class="form-group">
                  <label class="col-md-9 control-label">brand name</label>
                  <div class="col-md-12">
                    <input id="textinput" name="brand" type="text" placeholder="Enter Product Brand Name"
                      class="form-control input-md">
                  </div>
                </div>
                <!-- product quantity -->
                <div class="form-group">
                  <label class="col-md-9 control-label">product price</label>
                  <div class="col-md-12">
                    <input id="textinput" name="price" type="number" placeholder="Enter Product price"
                      class="form-control input-md">
                  </div>
                </div>
                <div class="form-group">
                  <div class="row ml-1">
                    <div class="col-md-6">
                      <label class="col-md-9 control-label">product quantity</label>
                      <input id="textinput" name="quantity" type="number" placeholder="Enter Product Quantity"
                        class="form-control input-md">
                    </div>
                    <div class="col-md-6">
                      <label class="col-md-9 control-label">product stock </label>
                      <input id="textinput" name="stock" type="number" placeholder="Enter Product in Stock"
                        class="form-control input-md">
                    </div>
                  </div>
                </div>
                <!-- Textarea -->
                <div class="form-group">
                  <label class="col-md-9 control-label">product detail</label>
                  <div class="col-md-12">
                    <input class="form-control" id="textarea" name="details" placeholder="Enter Product Details">
                  </div>
                </div>
                <!-- File Button -->
                <div class="form-group">
                  <label class="col-md-12 control-label">Upload Product Photo</label>
                  <div class="col-md-12">
                    <input id="filebutton" name="file" class="input-file" type="file" accept="image/*" multiple>
                  </div>
                </div>
                <!-- Button -->
                <div class="form-group">
                  <div class="col-md-9">
                    <button id="singlebutton" type="submit" class="btn btn-primary">add product</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--container-fluid -->
  </div>
  <!-- End of Main Content -->
  {{>adminFooter}}