{{>adminNavbar}}
<!-- Begin Page Content -->
<div class="container-fluid">
  <!-- Page Heading -->
  <h1 class="h3 mb-4 text-gray-800">Edit the product</h1>
  <div class="row">
    <div class="col-lg-9">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">product details </h6>
          {{#if err }}
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong> Error </strong>
            {{err}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          {{/if}}
          {{#if msg }}
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong> success </strong>
            {{msg}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          {{/if}}
        </div>
        {{#if Product}}
        <div class="card-body">
          <form action="/edit?_csrf={{csrfToken}}" method="POST" , enctype="multipart/form-data">
            {{!-- <input type="hidden" name="_csrf" value="{{csrfToken}}"> --}}
            <input type="hidden" name="id" value="{{Product._id}}">
            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-9 control-label" for="textinput">Product Name</label>
              <div class="col-md-12">
                <input id="textinput" name="name" type="text" placeholder="Enter Name of Product"
                  class="form-control input-md" value="{{Product.name}}">
              </div>
            </div>
            <!-- Search input-->
            <div class="form-group">
              <label class="col-md-9 control-label">Brand Name</label>
              <div class="col-md-12">
                <input id="textinput" name="brand" type="text" placeholder="Enter Product Brand Name"
                  class="form-control input-md" value="{{Product.brand}}">
              </div>
            </div>
            <!-- product quantity -->
            <div class="form-group">
              <label class="col-md-9 control-label">Product Price </label>
              <div class="col-md-12">
                <input id="textinput" name="price" type="number" placeholder="Enter Product Brand Name"
                  class="form-control input-md" value="{{Product.price}}">
              </div>
            </div>
            <div class="form-group">
              <div class="row ml-1">
                <div class="col-md-6">
                  <label class="col-md-9 control-label">Product Quantity(In Liter)</label>
                  <input id="textinput" name="quantity" type="number" placeholder="Enter Product Quantity"
                    class="form-control input-md" value="{{Product.quantity}}">
                </div>
                <div class="col-md-6">
                  <label class="col-md-9 control-label">Product Availability </label>
                  <input id="textinput" name="stock" type="number" placeholder="Enter Product in Stock"
                    class="form-control input-md" value="{{Product.stock}}">
                </div>
              </div>
            </div>
            <!-- product quantity -->
            <!-- Textarea -->
            <div class="form-group">
              <label class="col-md-9 control-label">Product Details</label>
              <div class="col-md-12">
                <input class="form-control" id="textarea" name="details" placeholder="Enter Product Details"
                  value="{{Product.details}}">

              </div>
            </div>
            <!-- File Button -->
            <div class="form-group">
              <label class="col-md-12 control-label">Upload Product Photo</label>
              <div class="col-md-12">
                <input id="filebutton" name="file" class="input-file" type="file" accept="image/*">
                  <img src="/uploads/{{Product.image}}" alt="profile image" width="80">
              </div>
            </div>
            <!-- Button -->
            <div class="form-group">
              <div class="col-md-9">
                <button id="singlebutton" type="submit" class="btn btn-primary">Update Product</button>
              </div>
            </div>
          </form>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
